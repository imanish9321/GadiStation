yum install mod_ssl
openssl req -x509 -nodes -days 365 -newkey rsa:2048   -keyout /etc/ssl/private/gaadi.key   -out /etc/ssl/certs/gaadi.crt

vim /etc/httpd/conf/httpd.conf
#HTTP
<VirtualHost *:80>
    RewriteEngine On
    RewriteRule ^ https://%{SERVER_ADDR}%{REQUEST_URI} [R=301,L]
    DocumentRoot /var/www/html/GadiStation
</VirtualHost>
Listen 443 https
#HTTPS
<VirtualHost *:443>
    DocumentRoot /var/www/html/GadiStation

    SSLEngine on
    SSLCertificateFile    /etc/ssl/certs/gaadi.crt
    SSLCertificateKeyFile /etc/ssl/private/gaadi.key

    <Directory /var/www/html/GadiStation>
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>
